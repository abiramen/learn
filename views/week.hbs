<h1>{{course}} Week {{week}}</h1>
<strong><a href="{{classPath}}"><p id="class-assist"><span class="icon">keyboard_arrow_left</span> View all weeks</p></a></strong>
<p id="week-desc">{{desc}}</p>

<a class="button-link" href="{{weekPath}}/feedback"><button id="week-feedback-button">Give feedback</button></a>

{{#if text}}
<div class="session-item">
    <p id="week-text-desc">{{{text}}}</p>
    {{#if links}}
    <h5><strong>Links</strong></h5>
    <ul>
        {{#links}}
        <li><a href="{{link}}" target="_blank" rel="noopener noreferrer nofollow">
            <strong>{{name}}</strong><span class="icon">keyboard_arrow_right</span>
        </a></li>
        {{/links}}
    </ul>
    {{/if}}
</div>
{{/if}}

{{#if files}}
<div class="session-item">
    <h3>Files</h3>
    <div class="nav-border"></div>
    <ul>
        {{#files}}
        <details>
            <summary><strong>{{name}}</strong> - {{desc}}</summary>
            <script src="/js/embed.js?target={{../repo}}week{{../week}}%2F{{name}}&style=nord&showBorder=on&showLineNumbers=on&showFileMeta=on&showCopy=on"></script>
        </details>
        {{/files}}
    </ul>
</div>
{{/if}}

{{#if slides}}
<div class="session-item">
    <h3>Slides</h3>
    <div class="nav-border"></div>
    <div class="slides-container">
        <iframe src="https://docs.google.com/presentation/d/e/{{slides}}/embed"></iframe>
    </div>
</div>
{{/if}}
